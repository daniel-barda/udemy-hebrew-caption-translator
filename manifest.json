{
  "manifest_version": 3,
  "name": "Udemy Hebrew Transcript Translate",
  "version": "1.0",
  "description": "Translate Udemy transcript (not captions) from English to Hebrew in real time using Datpmt API.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.udemy.com/*",
    "https://api.datpmt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.udemy.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}